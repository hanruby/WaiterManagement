@model WebUI.Infrastructure.Abstract.IAuthProvider

<div id="account" class="jumbotron">
    <span class="caption">
@if (Model.IsLogged)
{
    <b>Hello: </b>
    <b>@HttpContext.Current.User.Identity.Name</b>
    <span id="logout" class="btn btn-default btn-sm">
    @Html.ActionLink("Logout", "Logout", new { returnUrl = Request.Url })
    </span>
}
else
{
    <b>You are not logged</b>
    <span id="login" class="btn btn-default btn-sm">
    @Html.ActionLink("Login", "Login")
    </span>
}
    </span>
</div>