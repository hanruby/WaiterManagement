@using WebUI.HtmlHelpers
@model WebUI.Models.MenuListViewModel

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

@foreach (var item in Model.MenuItems){
    <div class="item">
        <h3>@item.Name</h3>
        @item.Description
        <h4>@item.Price.Amount @item.Price.Currency</h4>
    </div>
}

<div class="pager">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new {page = x}))
</div>
