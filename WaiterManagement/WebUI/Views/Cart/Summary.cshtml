@model ClassLib.DataStructures.Cart

<div id="cart" class="jumbotron">
    <span class="caption">
        <b>Your cart:</b>
        @Model.Lines.Sum(x => x.Quantity) item(s),
        @Model.ComputeTotalValue() @Model.Currency
    </span>
    <span id="checkout" class="btn btn-default btn-sm">
        @Html.ActionLink("Checkout", "Index", "Cart",
            new { returnUrl = Request.Url.PathAndQuery }, null)
    </span>
</div>