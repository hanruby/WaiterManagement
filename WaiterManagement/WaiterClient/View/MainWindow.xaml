<Window x:Class="WaiterClient.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="240" Width="300"
        Icon="/Icons/login17.png">
    <Grid Style="{DynamicResource ResourceKey=BackgroundGrid}">
        <Grid.RowDefinitions>
            <RowDefinition  Height="20"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="20"/>
            <ColumnDefinition />
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="1" Grid.Column="1">Login</Label>
        <TextBox Name="LoginTextBox" Grid.Row="2" Grid.Column="1"></TextBox>
        <Label Grid.Row="3" Grid.Column="1">Password</Label>
        <PasswordBox Name="MyPasswordBox" Grid.Row="4" Grid.Column="1"></PasswordBox>
        <Button Name="LoginButton" Grid.Row="5" Grid.Column="1" Width="100" Height="20" Click="LoginButton_Click">Log In</Button>
        <Button Name="ExitButton" Grid.Row="6" Grid.Column="1" Width="100" Height="20" Click="ExitButton_Click" >Exit</Button>
    </Grid>
</Window>
