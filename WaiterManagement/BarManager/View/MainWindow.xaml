<Window x:Class="BarManager.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="150" Width="525"
        Icon="../Icons/fastfood.png">
    <Window.Resources>
        
    </Window.Resources>
    <Grid Style="{DynamicResource ResourceKey=BackgroundGrid}">
        
        <Grid.RowDefinitions>
            <RowDefinition  Height="20"/>
            <RowDefinition />
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="20"/>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>


        <Button Name="MenuManagerButton" Content="Manage Menu" Grid.Row="1" Grid.Column="1" Margin="10" Click="MenuManagerButton_Click" />
            <Button Name="WaiterManagerButton" Content="Manage Waiters" Grid.Row="1" Grid.Column="2" Margin="10" Click="WaiterManagerButton_Click"/>

        <Button Name="TableManagerButton" Content="Manage Tables" Grid.Row="1" Grid.Column="3" Margin="10" Click="TableManagerButton_Click"/>
    </Grid>
</Window>
